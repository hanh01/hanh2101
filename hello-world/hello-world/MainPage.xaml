<Page
    x:Class="hello_world.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:hello_world"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Name="LayoutGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="999">
        
        <Button Content="Click Me" 
                Name="ClickMeButton" 
                Margin="20,20,0,0" 
                VerticalAlignment="Top" 
                Height="100" 
                Width="200" 
                Background="red" 
                HorizontalAlignment="Left" 
                Click="ClickMeButton_Click"/>
        <TextBox x:Name="ResultTextBlock" HorizontalAlignment="Left" Margin="222,163,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="64"/>

    </Grid>
</Page>
